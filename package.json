{
	"name": "styled-rhythm",
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"version": "0.0.1",
	"description": "tailwindcss typography and rhythm utilities",
	"keywords": [
		"tailwindcss",
		"typography",
		"baseline",
		"grid",
		"rhythm"
	],
	"author": "tol.is",
	"main": "index.js",
	"scripts": {
		"postinstall": "lerna bootstrap",
		"lern": "lerna run  watch --stream",
		"types": "lerna exec --scope @styled-rhythm/types -- yarn develop",
		"core": "lerna exec --scope @styled-rhythm/core -- yarn develop",
		"start": "npm-run-all --parallel core tailwind:plugin example:tlwd ",
		"test": "jest --watch --onlyChanged --watchman --forceExit --detectOpenHandles --notify --notifyMode=failure",
		"docs": "lerna exec --scope @styled-rhythm/docs -- yarn start",
		"tailwind:plugin": "lerna exec --scope @styled-rhythm/tailwindcss -- yarn start",
		"core:dev": "lerna exec --scope @styled-rhythm/core -- yarn start",
		"example:tlwd": "lerna exec --scope @styled-rhythm/example-tailwindcss -- yarn start",
		"theme:plex": "lerna exec --scope @styled-rhythm/theme-plex -- yarn start"
	},
	"devDependencies": {
		"@testing-library/cypress": "^5.0.1",
		"@testing-library/jest-dom": "^4.1.0",
		"@testing-library/react": "^9.1.4",
		"@types/jest": "^24.0.18",
		"@types/node": "^12.7.5",
		"@types/react": "^16.9.2",
		"@types/react-dom": "^16.9.0",
		"@types/react-test-renderer": "^16.9.0",
		"benchmark": "^2.1.4",
		"jest": "^24.9.0",
		"jest-emotion": "^10.0.17",
		"jshint": "^2.10.2",
		"lerna": "^3.20.2",
		"prun": "^1.0.1",
		"react": "^16.9.0",
		"react-dom": "^16.9.0",
		"react-test-renderer": "^16.9.0",
		"ts-jest": "^24.1.0"
	},
	"license": "MIT"
}
